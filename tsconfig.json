{
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "commonjs",
    "target": "es6",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
}