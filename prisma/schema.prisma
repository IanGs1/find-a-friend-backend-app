generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id String @id @default(uuid())

  responsableName String
  email           String @unique
  password        String
  phone           String

  // One-To-One Relation in Prisma 
  address Address?

  @@map("orgs")
}

model Address {
  id String @id @default(uuid())

  state        String
  municipality String
  neighborhood String
  street       String
  number       Int
  cep          String

  // One-To-One Relation in Prisma 
  org   Org?   @relation(fields: [orgId], references: [id])
  orgId String @unique

  @@map("addresses")
}
